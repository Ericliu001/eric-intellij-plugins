<idea-plugin>
  <id>com.ericliu</id>
  <name>Hello Action Project</name>
  <version>0.0.1</version>
  <vendor email="dummy" url="dummy">dummy</vendor>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <actions>
    <group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
      <add-to-group group-id="MainMenu" anchor="last"/>

      <action id="Myplugin.Textboxes" class="com.ericliu.HelloAction" text="Hello" description="Says hello"/>

      <action id="com.ericliu.ChangeInterfaceAction" class="com.ericliu.ChangeInterfaceAction"
              text="Change Interface">
        <add-to-group group-id="MainMenu" anchor="first"/>
      </action>
    </group>
  </actions>
</idea-plugin>